
 <head>
   <link rel="stylesheet" href="../css/groupbox.css">
   <script src="../js/util.js"></script>
   <script src="../js/sweetalert2@9.js"></script>
   <script src="../vipermedix/js/properties.js"></script>
   <script src="../vipermedix/js/supplier.js"></script>
 </head>   
 {{>menuVertical}}
<div class="content-page-container full-reset custom-scroll-containers">
  {{>menuHorizontal}}
    <div class="container-fluid">
      <div class="row mtop-10">
         <div class="col-sm-12">
           <fieldset class="well">
              <legend class="well-legend text-uppercase">{{supp.key_addP}}:</legend>
               <form id={{supp.frm_name}}>
                 <div class="row">
                    <input type="text" 
                          style="display: none;"
                          class="form-control" 
                          id={{supp.frm_id}} 
                          v-model={{supp.frm_id}} 
                          >
                   <div class="col-sm-4">
                     <div class="form-group">
                       <label for="{{supp.frm_nameS}}">{{supp.key_name}}</label>
                       <input type="text" 
                          class="form-control" 
                          id={{supp.frm_nameS}} 
                          v-model={{supp.frm_nameS}} 
                          maxlength="256" minlength="20" 
                          pattern="/[A-Za-z]$/" 
                          data-original-title="{{supp.msg_name}}" 
                          data-original-name="key_name"
                          required>
                     </div>
                   </div>

                    <div class="col-sm-4">
                      <div class="form-group">
                        <label for="{{supp.frm_rfc}}">{{supp.key_rfc}}</label>
                        <input type="text" 
                               class="form-control" 
                               id={{supp.frm_rfc}} 
                               v-model={{supp.frm_rfc}} 
                               maxlength="13" 
                               minlength="13" 
                                data-original-title="{{supp.msg_rfc}}" 
                                data-original-name="key_rfc"
                               required>
                      </div>
                    </div>

                    <div class="col-sm-4">
                      <div class="form-group">
                        <label for={{supp.frm_frm_ksp}}>{{supp.key_ksp}}</label>
                        <input type="text" 
                               class="form-control"
                               id={{supp.frm_ksp}} 
                               v-model={{supp.frm_ksp}} 
                               maxlength="30"
                               data-original-title="{{supp.msg_ksp}}" 
                               data-original-name="key_ksp"
                               required
                               > 
                      </div>
                    </div>

                    <div class="col-sm-4">
                      <div class="form-group">
                        <label for={{supp.frm_ASAT}}>{{supp.key_ASAT}}</label>
                        <select class="form-control" v-on:hange="changeSelect"
                                id={{supp.frm_ASAT}} 
                                v-modele={{supp.frm_ASAT}} 
                                data-original-title="{{supp.msg_ASAT}}" 
                                data-original-name="key_ASAT"
                               required>
                          <option value="0">-- Seleccione --</option>
                          {{#each address}}
                              <optgroup label="Col.{{colony}}">
                                <option value="{{id}}">Calle {{street}}, #Int.{{noInt}}, #Ext.{{noExt}}</option>
                              </optgroup>
                          {{/each}}
                        </select>
                      </div>
                    </div>

                  <div class="col-sm-4">
                      <div class="form-group">
                        <label for={{supp.frm_tele}}>{{supp.key_tele}}</label>
                        <input type="text" class="form-control" id={{supp.frm_tele}} v-model={{supp.frm_tele}} maxlength="20">
                      </div>
                  </div>

                  <div class="col-sm-4">
                      <div class="form-group">
                        <label for={{supp.frm_cel}}>{{supp.key_cel}}</label>
                        <input type="text" class="form-control" id={{supp.frm_cel}} v-model={{supp.frm_cel}} maxlength="13">
                      </div>
                  </div>

                  <div class="col-sm-4">
                      <div class="form-group">
                        <label for={{supp.frm_email}}>{{supp.key_email}}</label>
                        <input type="text" 
                               class="form-control" 
                               id={{supp.frm_email}} 
                               v-model={{supp.frm_email}} 
                               maxlength="50" 
                               pattern="^[a-zA-Z0-9_\-\.~]{2,}@[a-zA-Z0-9_\-\.~]{2,}\.[a-zA-Z]{2,4}$" 
                               data-original-title="{{supp.msg_email}}" 
                               data-original-name="key_email"
                               >
                      </div>
                  </div>

                  <div class="col-sm-4">
                      <div class="form-group">
                        <label for={{supp.frm_logo}}>{{supp.key_log}}</label>
                        <input type="file" class="form-control" id={{supp.frm_logo}} v-on:change="{{supp.frm_logo}}">
                      </div>
                  </div>
                    <div class="col-sm-12">
                       <p class="text-center">
                         <button type="button" class="btn btn-success mtop-10" value="{{supp.frm_name}}" v-on:click="validateSupplier">{{global.key_guad}}</button>
                          <button type="button" class="btn btn-default mtop-10" >{{global.key_limp}}</button>
                       </p>
                    </div>
                 </div>
               </form>
           </fieldset>
         </div>
      </div>

      <div class="row mtop-10">
         <div class="col-sm-12">
           <fieldset class="well" id="demo">
               <legend class="well-legend text-uppercase">Lista de Proveedores:</legend>
               <div class="row">
                 <div class="col-lg-4">
                   <div class="group-material">
                    <form id="search" style="margin-bottom:5px">
                        Search <input name="query" v-model="searchQuery" class="form-control">
                    </form>
                  </div>
                 </div>
               </div>
               <demo-grid :heroes="gridData" :columns="gridColumns" :filter-key="searchQuery">
               </demo-grid>
           </fieldset>
          </div>
      </div>

    </div>
</div>

<script type="text/x-template" id="grid-template">
    <div class="container-fluid">
          <table class="table">
            <thead>
              <tr>
                <th v-for="key in columns"
                  @click="sortBy(key)" 
                  
                  \:class="{ active: sortKey == key.column }">
                  
                  <template v-if="key.column !==''">
                    \{{ key.name | capitalize }}
                  <span class="arrow" :class="sortOrders[key.column] > 0 ? 'asc' : 'dsc'" >
                  </span>
                  </template>
                 
                </th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="entry in filteredHeroes">
                <td>\{{entry['supplierName']}}</td>
                <td>\{{entry['addressSAT']}}</td>
                <td>\{{entry['emailAddress']}}</td>
                <td>
                    <button type='button' class="btn btn-primary"  v-on:click='findById(entry["id"])' >Editar</button>
                </td>
              </tr>
            </tbody>
          </table>
          </div>
        </script>